<script>
	var socket = io();
	socket.on('err',function(data){
		console.log(data);
		alert(data.message);
	});

	var TEMPLATE_ID = "<%= id %>";
	var TEMPLATE = {};

	refreshTemplate();

	function updateProductPage(){
		$('#t_main_image').attr('src',TEMPLATE.main_img);
		$('#t_title').html(TEMPLATE.title);
		$('#t_desc').html(TEMPLATE.description.replace(/\n/g, "<br />"));
		if(TEMPLATE.guarantee>0){
			$('#t_guarantee').html(TEMPLATE.guarantee+" Days Guarantee");
		}else{
			$('#t_guarantee').parent().remove();
		}
		
		$('#t_price').html("$"+TEMPLATE.price);

		var f_html = "";
		for(var i=0;i<TEMPLATE.features.length;i++){
			f_html += '<li><i class="fas fa-check greenlight"></i> '+TEMPLATE.features[i]+'</li>';
		}
		$('#t_features').html(f_html)

		$('#t_q1').html(TEMPLATE.faq[0]);
		$('#t_a1').html(TEMPLATE.faq[1]);
		$('#t_q2').html(TEMPLATE.faq[2]);
		$('#t_a2').html(TEMPLATE.faq[3]);

		var bi_html = "";
		for(var i=0;i<TEMPLATE.bottom_imgs.length;i++){
			if(i > 0){
				bi_html += '<div class="spacer30"></div>';
			}
			bi_html += '<div class="mp_main_image_container"><img class="mp_main_image" src="'+TEMPLATE.bottom_imgs[i]+'" alt=""></div>';
		}
		$('#bottom_images').html(bi_html);
	}

	function refreshTemplate(){
		getTemplate(TEMPLATE_ID,function(err,data){
			if(!err) {
				TEMPLATE = data.template_;
				updateProductPage();
			}else{
				console.log(err);
			}
		});
	}

	$("#menu_drop_icon").click(function(){
		$('.sidebar_container').animate({'width':'268px'},400);
		$('.menuOverlay').fadeIn(400);
	});

	$(".menuOverlay").click(function(){
		$('.sidebar_container').animate({'width':'0'},400);
		$('.menuOverlay').fadeOut(400);
	});
	
	$('#listItem').click(function(){
		window.location ='/marketplace/add';
	});
</script>
